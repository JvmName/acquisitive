import kotlin.Int;

getIdRange:
SELECT hid.id, hid.rank
FROM HnIdEntity hid
WHERE
    hid.fetchMode = :fetchMode
    AND hid.rank
        BETWEEN
            (SELECT rank FROM HnIdEntity WHERE HnIdEntity.id = :startId)
            AND
            (SELECT (rank + :window)-1 FROM HnIdEntity WHERE HnIdEntity.id = :startId)
ORDER BY hid.rank ASC;


